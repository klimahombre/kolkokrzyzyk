logging.basicConfig(
    filename="game.log",     # Nazwa pliku logów
    level=logging.INFO,      # Poziom logowania (INFO, DEBUG, WARNING, ERROR)
    format="%(asctime)s - %(levelname)s - %(message)s"


    def ai_move():
    best_score = -float('inf')
    best_move = None

    for row in range(ROWS):
        for col in range(COLS):
            if board[row][col] == 0:
                board[row][col] = 2
                score = minimax(board, 0, False)
                board[row][col] = 0
                logging.debug(f"AI ocenia ruch ({row}, {col}) z wynikiem {score}")
                if score > best_score:
                    best_score = score
                    best_move = (row, col)

    if best_move:
        r, c = best_move
        board[r][c] = 2
        logging.info(f"AI wykonuje ruch: ({r}, {c}) z oceną: {best_score}")
        return check_win(2)


