    if is_board_full() and not check_win(1) and not check_win(2):
        logging.info("Gra zakończona remisem.")
    else:
        winner = 1 if player == 1 else 2
        logging.info(f"Gra zakończona. Wygrał Gracz {winner}.")



def restart():
    global board, game_over, player
    board = [[0 for _ in range(COLS)] for _ in range(ROWS)]
    screen.fill(BG_COLOR)
    draw_lines()
    game_over = False
    player = 1
    logging.info("Gra została zrestartowana.")
